<%= form_with(model: Search.new, url: search_path , method: :get, local: true) do |form| %>

  <div class="field">
    <%= form.label :query, t(:query_field) , style: 'display: none;' %>
    <%= form.text_field :query, id: t(:query_field) %>
    <%= form.button(style: 'border-radius: 10px', id: t(:query_submit)) do %>
      <i class="bi bi-search" ></i>
    <% end %>
    
  </div>
<% end %>