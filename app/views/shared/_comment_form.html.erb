<%= form_with model:@comment do |f| %>
  <p>
    <%= f.label :description, t(:comment) %>
  </p>
  <p>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.hidden_field :object_type, value: object.class %>
  </p>
  <p>
    <%= f.hidden_field :object_id, value: object.id %>
  </p>

  <p>
    <%= f.submit t(:save) %>
  </p>
<% end %>