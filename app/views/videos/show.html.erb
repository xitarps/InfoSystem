

<% if I18n.locale == :es %>

  <h5>
    <%= @video.title_es %>
  </h5>
  <p style='display: flex; justify-content:center;'>
    <video controls style="width: 90%" src="<%= @video.file %>"></video>
  </p>


  <p>
    <%= render 'shared/like_component', object: @video %> 
    <%= @video.likes.count %>
  </p>


  <p>
    <%= @video.description_es%>
  </p>
  <h6 style='font-size: 0.8em ; color: rgba(0,0,0,0.8);'>
    <% @video.categories.where(language: 'es').each do |tag| %>
      #<%= tag.name %> 
    <% end %>
  </h6>
  <cite style='font-size: 0.8em ; color: rgba(0,0,0,0.8);'>
    <%= @video.user.email%>
  </cite>
  
  <% if current_user.admin? %>
    <p>
      <%= link_to t(:edit), edit_video_path(@video) %> | 
      <%= link_to t(:delete), @video, method: :delete %>
    </p>
  <% end %>

  <p>
    <%= render 'shared/comment_form', object: @video %>
  </p>

