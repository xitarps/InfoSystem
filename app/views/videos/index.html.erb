            <p>
              <td> | <%= link_to t(:edit), edit_video_path(video) %></td>
              <td> | <%= link_to t(:delete), video, method: :delete %></td>
            </p>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<% end %>